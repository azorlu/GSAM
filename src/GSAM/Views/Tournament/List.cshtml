@model TournamentsListViewModel

<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-default"
     page-class-selected="btn-primary" 
     page-url-category="@Model.CurrentCategory"
     class="btn-group pull-left">
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-6">

            @foreach (var t in Model.Tournaments)
            {
                @Html.Partial("TournamentSummary", t)
            }

        </div>
    </div>
</div>

<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-default"
     page-class-selected="btn-primary" 
     page-url-category="@Model.CurrentCategory"
     class="btn-group pull-left">
</div>
