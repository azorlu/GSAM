@model Player
@{
    ViewBag.Title = "Edit Player";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PlayerID" />
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <div><span asp-validation-for="FirstName" class="text-danger"></span></div>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <div><span asp-validation-for="LastName" class="text-danger"></span></div>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CountryCode"></label>
        <div><span asp-validation-for="CountryCode" class="text-danger"></span></div>
        <input asp-for="CountryCode" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <div><span asp-validation-for="Gender" class="text-danger"></span></div>
        @Html.RadioButtonFor(model => model.Gender, "true") Male
        @Html.RadioButtonFor(model => model.Gender, "false") Female
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <div><span asp-validation-for="DateOfBirth" class="text-danger"></span></div>
        <input asp-for="DateOfBirth" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="List" class="btn btn-default">Cancel</a>
    </div>
</form>


