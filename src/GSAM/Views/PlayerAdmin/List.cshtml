@model PlayersListViewModel
@{
    ViewBag.Title = "List Players";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th class="text-right">Player ID</th>
        <th class="text-left">Full Name</th>
        <th class="text-left">Gender</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var p in Model.Players)
    {
        <tr>
            <td class="text-right">@p.PlayerID</td>
            <td class="text-left">@p.FullName</td>
            <td class="text-left">@(p.Gender ? "M" : "F")</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-playerID="@p.PlayerID">
                        Edit
                    </a>
                    <input type="hidden" name="PlayerID" value="@p.PlayerID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-default"
     page-class-selected="btn-primary" class="btn-group pull-left">
</div>

<div class="text-right">
    <a asp-action="Create" class="btn btn-primary">Add Player</a>
</div>


