@model TournamentsListViewModel
@{
    ViewBag.Title = "Tournament List";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th class="text-right">Tournament ID</th>
        <th class="text-left">Tournament Name</th>
        <th class="text-left">Tournament Category</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var t in Model.Tournaments)
    {
        <tr>
            <td class="text-right">@t.TournamentID</td>
            <td class="text-left">@t.Name</td>
            <td class="text-left">@t.Category</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-tournamentID="@t.TournamentID">
                        Edit
                    </a>
                    <input type="hidden" name="TournamentID" value="@t.TournamentID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-default"
     page-class-selected="btn-primary"
     page-url-category="@Model.CurrentCategory"
     class="btn-group pull-left">
</div>

<div class="text-right">
    <a asp-action="Create" class="btn btn-primary">Add Tournament</a>
</div>


